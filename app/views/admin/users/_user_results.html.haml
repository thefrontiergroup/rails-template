= simple_form_for :search, method: :get do |s|
  = s.input :search_term, label: "Email", placeholder: "Type email here", input_html: { value: (params[:search][:search_term] unless params[:search].blank?) }
  = s.button :submit, "Search"

- if @users.present?
  %table
    %colgroup
      %col{style: 'width: 80%'}
      %col{style: 'width: 20%'}
    %thead
      %tr
        %th= sortable_heading_for(:email)
        %th.actions Actions
    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td.actions
            - if policy(user).edit?
              = link_to "Edit", edit_url.call(user), class: "btn btn-small"
            - if policy(user).destroy?
              = link_to "Delete", delete_url.call(user), method: :delete, data: { confirm: "Are you sure you want to delete #{user}?" }, class: "btn btn-small"
  = paginate @users

- else
  %p= "No users matched that search"